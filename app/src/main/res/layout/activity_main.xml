<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/drawerLayout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".activities.MainActivity">

  <androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
      android:id="@+id/nestedScrollView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_behavior="@string/appbar_scrolling_view_behavior">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
          android:id="@+id/space"
          android:layout_width="match_parent"
          android:layout_height="?actionBarSize"
          android:layout_alignParentTop="true"
          android:layout_marginBottom="@dimen/card_margin" />

        <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/recyclerView"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_below="@id/space"
          android:paddingBottom="@dimen/rounded_layout_icon_size"
          android:divider="@color/transparent"
          android:overScrollMode="never"
          android:layoutAnimation="@anim/anim_show_list"
          app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
          app:spanCount="2"
          tools:listitem="@layout/layout_note_item"
          tools:itemCount="8" />

        <Space
          android:layout_width="match_parent"
          android:layout_height="?actionBarSize"
          android:layout_below="@id/recyclerView" />
      </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/appBarLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:elevation="0dp"
      android:translationZ="0.1dp"
      android:background="@color/transparent">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
          android:id="@+id/materialCardView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/card_margin"
          app:layout_scrollFlags="scroll|enterAlways|snap">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.SearchView
              android:id="@+id/searchView"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              app:queryHint="@string/info_search_hint"
              app:defaultQueryHint="@string/info_search_hint"
              app:queryBackground="@android:color/transparent"
              app:iconifiedByDefault="false" />

            <ImageButton
              android:id="@+id/action_sort"
              android:layout_width="@dimen/rounded_layout_icon_size"
              android:layout_height="@dimen/rounded_layout_icon_size"
              app:backgroundTint="@color/transparent"
              android:src="@drawable/action_sort"
              app:tint="?colorAccent"
              android:contentDescription="@string/info_sort_type" />

            <ImageButton
              android:id="@+id/action_order"
              android:layout_width="@dimen/rounded_layout_icon_size"
              android:layout_height="@dimen/rounded_layout_icon_size"
              android:layout_marginEnd="@dimen/card_margin"
              app:backgroundTint="@color/transparent"
              android:src="@drawable/action_order"
              app:tint="?colorAccent"
              android:contentDescription="@string/info_sort_order" />
          </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
      </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/layout_main_bottom_appbar" />
  </androidx.coordinatorlayout.widget.CoordinatorLayout>

  <include layout="@layout/layout_drawer" />
</androidx.drawerlayout.widget.DrawerLayout>