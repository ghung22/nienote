<resources>
  <!-- Base application theme. -->
  <style name="Theme.NieNote" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/light</item>
    <item name="colorPrimaryVariant">@color/white</item>
    <item name="colorOnPrimary">@color/white</item>

    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/gray</item>
    <item name="colorSecondaryVariant">@color/black</item>
    <item name="colorOnSecondary">@color/lightgray</item>

    <!-- SystemUI color. -->
    <item name="android:statusBarColor">@color/transparent</item>
    <item name="android:windowLightStatusBar">true</item>

    <!--  SystemUI icon.  -->
    <item name="homeAsUpIndicator">@drawable/action_back</item>

    <!-- Customize your theme here. -->
    <item name="bottomAppBarStyle">@style/Theme.NieNote.BottomAppBar</item>
    <item name="imageButtonStyle">@style/Theme.NieNote.Button</item>
    <item name="bottomSheetDialogTheme">@style/Theme.NieNote.BottomSheetDialog</item>
    <item name="cardViewStyle">@style/Theme.NieNote.MaterialCardView</item>
    <item name="materialCardViewStyle">@style/Theme.NieNote.MaterialCardView</item>
    <item name="android:searchViewStyle">@style/Theme.NieNote.SearchView</item>
  </style>

  <!-- Drawer buttons -->
  <style name="Theme.NieNote.DrawerMenuItem" parent="Widget.MaterialComponents.Button.UnelevatedButton">
    <item name="android:padding">@dimen/drawer_menu_item_padding</item>
    <item name="android:foreground">?selectableItemBackground</item>
    <item name="android:background">@color/transparent</item>
    <item name="android:textColor">?attr/colorOnSecondary</item>
    <item name="android:textSize">@dimen/drawer_menu_item_text_size</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textAlignment">textStart</item>
    <item name="android:drawablePadding">@dimen/drawer_menu_item_drawable_padding</item>
  </style>

  <!-- EditorActivity bottom appbar -->
  <style name="Theme.NieNote.BottomAppBar" parent="@style/Widget.MaterialComponents.BottomAppBar.Colored">
    <item name="backgroundTint">@color/faded_black</item>
  </style>

  <!-- EditorActivity grouped buttons -->
  <style name="Theme.NieNote.Button" parent="@style/Widget.AppCompat.ImageButton">
    <item name="elevation">0dp</item>
  </style>

  <!-- Create corners for bottom dialogs -->
  <style name="Theme.NieNote.BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
    <item name="bottomSheetStyle">@style/Theme.NieNote.BottomSheet</item>
  </style>

  <style name="Theme.NieNote.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
    <item name="shapeAppearanceOverlay">@style/Theme.NieNote.ShapeAppearanceBottomSheetDialog</item>
  </style>

  <style name="Theme.NieNote.ShapeAppearanceBottomSheetDialog" parent="">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSizeTopRight">16dp</item>
    <item name="cornerSizeTopLeft">16dp</item>
    <item name="cornerSizeBottomRight">0dp</item>
    <item name="cornerSizeBottomLeft">0dp</item>
  </style>

  <!-- CardViews -->
  <style name="Theme.NieNote.MaterialCardView" parent="Widget.MaterialComponents.CardView">
    <item name="cardCornerRadius">@dimen/card_radius</item>
    <item name="cardElevation">5dp</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
    <item name="android:checkable">true</item>
  </style>

  <!-- SearchView -->
  <style name="Theme.NieNote.SearchView" parent="Widget.AppCompat.SearchView">
    <item name="android:textSize">@dimen/search_view_text_size</item>
  </style>
</resources>